{
    "name": "vue3-headless-flash",
    "version": "0.1.42",
    "description": "Vue3 headless flash component, make your flash looks like yours",
    "keywords": [
        "flash",
        "toast",
        "toastify",
        "pagination",
        "vue 3",
        "typescript"
    ],
    "author": {
        "name": "Bedram Tamang",
        "url": "https://github.com/bedus-creation"
    },
    "license": "MIT",
    "files": [
        "dist/*"
    ],
    "main": "./dist/index.umd.js",
    "module": "./dist/index.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        },
        "./dist/style.css": {
            "import": "./dist/style.css",
            "require": "./dist/style.css"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "preview": "vite preview"
    },
    "dependencies": {
        "autoprefixer": "^10.4.8",
        "postcss": "^8.4.14",
        "tailwindcss": "^3.1.7",
        "tiny-emitter": "^2.1.0",
        "vue": "^3.2.37"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^3.0.0",
        "typescript": "^4.6.4",
        "vite": "^3.0.0",
        "vite-plugin-dts": "^1.4.0",
        "vue-tsc": "^0.38.4"
    }
}
